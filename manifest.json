{
  "manifest_version": 2,

  "name": "SoundCloud Controller",
  "description": "This extension allows to control sound cloud tabs",
  "version": "1.0",

  "icons": {
    "16": "soundcloud.png",
    "48": "soundcloud.png",
    "128": "soundcloud.png"
  },

  "browser_action": {
    "default_icon": "soundcloud.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "commands": {
     "play-or-pause": {
       "suggested_key": {
         "default": "Ctrl+Shift+Y",
         "mac": "Command+Shift+A"
       },
       "description": "Play or pause song",
       "global": true
     },
     "repeat": {
       "description": "Toggle repeat current",
       "global": true
     },
     "next": {
       "description": "Play next song",
       "global": true
     },
     "previous": {
       "description": "Play previous song",
       "global": true
     }
   },

  "permissions": [
    "activeTab",
    "*://soundcloud.com/*",
    "tabs"
  ]
}
